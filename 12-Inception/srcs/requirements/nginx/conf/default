server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name inception;

    ssl_certificate /etc/nginx/ssl/dripanuc.pem;
    ssl_certificate_key /etc/ssl/private/dripanuc.key;

    ssl_protocols TLSv1.3;

    index index.php;
    root /var/www/html;

    location ~ [^/]\.php(/|$) { 
            try_files $uri =404;
            fastcgi_pass wordpress:9000;
            include fastcgi_params;
            fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        }
}

